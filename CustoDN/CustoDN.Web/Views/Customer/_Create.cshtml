@model CustoDN.Domain.Customer


@using (Html.BeginForm("Submit", "Customer"))
{
    <tr>
        @Html.HiddenFor(c => c.Id)
        <td>@Html.TextBoxFor(c => c.FirstName)</td>
        <td>@Html.TextBoxFor(c => c.LastName)</td>
        <td>@Html.TextBoxFor(c => c.CompanyName)</td>
        <td>@Html.TextBoxFor(c => c.Email)</td>
        <td>@Html.TextBoxFor(c => c.Phone)</td>
        <td>@Html.TextBoxFor(c => c.BillingAddress)</td>
        <td><input type="Submit" name="Save" class="tiny button" /></td>
    </tr>
}

@section scripts
{
    <script src="~/Scripts/angular.js"></script>
    <script type="text/javascript">
    </script>
}